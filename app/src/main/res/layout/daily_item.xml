<LinearLayout
    xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:layout_width="0dp"
    andriod:layout_height="wrap_content"
    andriod:layout_weight="1"
    andriod:layout_marginBottom="10dp"
    andriod:orientation="vertical">

    <TextView
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:text="date"
        andriod:textSize="16sp"
        andriod:layout_gravity="center"/>

    <TextView
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:layout_gravity="center"
        andriod:textSize="16sp"
        andriod:text="week" />

    <ImageView
        andriod:layout_width="40dp"
        andriod:layout_height="40dp"
        andriod:scaleType="center"
        andriod:layout_gravity="center"
        andriod:background="@drawable/ic_launcher_foreground"
        andriod:layout_marginTop="8dp" />
</LinearLayout>